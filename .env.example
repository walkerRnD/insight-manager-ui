# Local SurrealDB connection
# Use surrealkv:// to persist locally in a .data folder, or mem:// for in-memory
SURREAL_CONNECTION=surrealkv://.data/devdb

# Namespace and database
SURREAL_NAMESPACE=app
SURREAL_DATABASE=main

# Access name (SurrealDB 2.x DEFINE ACCESS ... TYPE RECORD)
SURREAL_ACCESS=account

# Optional root/namespace credentials for seeding local dev
SURREAL_ROOT_USER=
SURREAL_ROOT_PASS=

# Auth cookie settings
AUTH_COOKIE_NAME=im_session
# Set to false only for local HTTP development if needed
AUTH_COOKIE_SECURE=true

